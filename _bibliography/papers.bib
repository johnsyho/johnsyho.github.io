@article{10.1038/s41928-024-01263-4, 
abbr={Nature Electronics},
year = {2024}, 
title = {{A digitally embroidered metamaterial biosensor for kinetic environments}}, 
author = {Zeng, Qihang and Tian, Xi and Nguyen, Dat T. and Li, Chenhui and Chia, Patrick and Tee, Benjamin C. K. and Wu, Changsheng and Ho, John S.}, 
journal = {Nature Electronics}, 
doi = {10.1038/s41928-024-01263-4}, 
abstract = {{Biosensors could be used in vehicles to monitor driver alertness, detect impairment and gauge stress levels. However, measuring biomarkers, such as heart rate and respiration, without physical contact remains a challenge in these environments due to issues related to movement and external interference. Here we report a metamaterial biosensor that can capture cardiopulmonary signals in kinetic environments without being in contact with the body. Fabricated using digital embroidery, the biosensor can be integrated with a safety harness and can detect physiological motion through near-field interactions between wireless signals and the body. We show that the approach is capable of continuous, hour-long recording of heartbeat and respiration in an airline cabin simulator. We also show that the biosensor can operate in a moving car, and exhibits no degradation in accuracy compared with a stationary environment. A textile metamaterial sensor can wirelessly measure biomarkers—such as heart rate and respiration—in vehicles and shows no accuracy degradation when operating in moving environments.}}, 
